@model List<WarehouseStock>
@{
    ViewData["Title"] = $"{ViewBag.Warehouse.Name} - Stok Listesi";
}

<div class="page-container">
    <div class="section-header">
        <h1 class="section-title">📋 @ViewBag.Warehouse.Name - Stok Listesi</h1>
        <a href="/Warehouses" class="btn btn-secondary">← Geri Dön</a>
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Barkod</th>
                        <th>Miktar</th>
                        <th>Son Güncelleme</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stock in Model)
                    {
                        <tr>
                            <td><span class="badge badge-info">@stock.Barcode</span></td>
                            <td><strong style="color: var(--success);">@stock.Quantity adet</strong></td>
                            <td>@stock.LastUpdated.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="cards-container">
            <div class="empty-state">
                <div style="font-size: 64px; margin-bottom: 16px;">📦</div>
                <h3>Bu depoda stok bulunmuyor</h3>
            </div>
        </div>
    }
</div>
@{
    ViewData["Title"] = "Depo Transferi";
}

<div class="page-container">
    <div class="section-header">
        <h1 class="section-title">🔄 Depo Transferi</h1>
        <a href="/Warehouses" class="btn btn-secondary">← Geri Dön</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">✅ @TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">❌ @TempData["Error"]</div>
    }

    <div class="cards-container" style="max-width: 600px; margin: 0 auto;">
        <form method="post">
            <div class="form-group">
                <label class="form-label">📤 Kaynak Depo</label>
                <select name="fromWarehouseId" class="form-select" required>
                    <option value="">Seçin</option>
                    @foreach (var warehouse in (List<Warehouse>)ViewBag.Warehouses)
                    {
                        <option value="@warehouse.Id">@warehouse.Name</option>
                    }
                </select>
            </div>

            <div style="text-align: center; font-size: 32px; margin: 16px 0;">⬇️</div>

            <div class="form-group">
                <label class="form-label">📥 Hedef Depo</label>
                <select name="toWarehouseId" class="form-select" required>
                    <option value="">Seçin</option>
                    @foreach (var warehouse in (List<Warehouse>)ViewBag.Warehouses)
                    {
                        <option value="@warehouse.Id">@warehouse.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">🔍 Barkod</label>
                <input type="text" name="barcode" class="form-control" placeholder="Barkod" required>
            </div>

            <div class="form-group">
                <label class="form-label">📊 Miktar</label>
                <input type="number" name="quantity" class="form-control" placeholder="Adet" min="1" required>
            </div>

            <button type="submit" class="btn btn-success" style="width: 100%;">
                🔄 Transfer Yap
            </button>
        </form>
    </div>
</div>